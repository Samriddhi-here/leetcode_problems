class Solution {
    public int maxArea(int[] height) {
        int n=height.length;
        int maxW=0;
        int l=0;
        int r=n-1;
        while(l<r){
            int b=r-l;
            int h= Math.min(height[l],height[r]);
            int area=b*h;
            maxW = Math.max(maxW,area);
            if(height[l]<height[r]){
                l++;
            }
            else{
                r--;
            }  
        }
        return maxW;
    }
}
